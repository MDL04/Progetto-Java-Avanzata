<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">

    <VBox alignment="TOP_CENTER" layoutX="191.0" layoutY="75.0" spacing="10">
        <TextField fx:id="usernameFld" promptText="Username" />
        <PasswordField fx:id="passwordFld" promptText="Password" />

        <Button onAction="#handleLogin" text="Login" />
        <Label fx:id="messageLbl" />

        <HBox alignment="CENTER">
            <Label style="-fx-font-size: 11px;" text="Non sei ancora registrato?" />
            <Hyperlink onAction="#goToRegister" style="-fx-text-fill: #0077cc; -fx-font-size: 11px;" text=" Registrati ora!" />
        </HBox>

    </VBox>
    <Button layoutX="245.0" layoutY="341.0" onAction="#goToHome" text="Tona alla home" />
</AnchorPane>
