<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:controller="controller.LoginController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="300">

    <VBox spacing="10" layoutX="50" layoutY="30">
        <TextField fx:id="usernameFld" promptText="Username"/>
        <PasswordField fx:id="passwordFld" promptText="Password"/>

        <Button text="Login" onAction="#handleLogin"/>
        <Label fx:id="messageLbl"/>

        <HBox alignment="CENTER">
            <Label text="Non sei ancora registrato?" style="-fx-font-size: 11px;" />
            <Hyperlink text=" Registrati ora!"
                       style="-fx-text-fill: #0077cc; -fx-font-size: 11px;"
                       onAction="#goToRegister"/>
        </HBox>

    </VBox>
</AnchorPane>

