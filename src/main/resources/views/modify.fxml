<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ModifyUserController">
    <children>
      <HBox alignment="CENTER_LEFT">
         <children>
              <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Modifica Dati Utente">
                  <font>
                      <Font name="System Bold" size="13.0" />
                  </font>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
      
              <HBox>
                  <Button fx:id="saveButton" onAction="#handleSave" text="Salva">
                  <HBox.margin>
                     <Insets left="20.0" />
                  </HBox.margin></Button>
                  <Button fx:id="cancelButton" onAction="#handleCancel" text="Annulla">
                  <HBox.margin>
                     <Insets left="10.0" />
                  </HBox.margin></Button>

                 <Label fx:id="messageLabel">
                  <HBox.margin>
                     <Insets left="10.0" />
                  </HBox.margin></Label>
              </HBox>
         </children>
      </HBox>

        <Label text="Nome Utente:">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin></Label>
        <TextField fx:id="usernameField">
         <VBox.margin>
            <Insets right="400.0" />
         </VBox.margin></TextField>

        <Label text="Email:">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin></Label>
        <TextField fx:id="emailField">
         <VBox.margin>
            <Insets right="400.0" />
         </VBox.margin></TextField>

        <Label text="Avatar:">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin></Label>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ComboBox fx:id="avatarComboBox" prefWidth="200.0" />
            <ImageView fx:id="avatarPreview" fitHeight="50.0" fitWidth="50.0" preserveRatio="true" />
        </HBox>

        <Separator />

        <Label text="Cambia Password (opzionale):">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin></Label>
        <Label text="Password Attuale:">
            <padding>
                <Insets top="5.0" />
            </padding></Label>
        <PasswordField fx:id="currentPasswordField">
         <VBox.margin>
            <Insets right="400.0" />
         </VBox.margin></PasswordField>

        <Label text="Nuova Password:">
            <padding>
                <Insets top="5.0" />
            </padding></Label>
        <PasswordField fx:id="newPasswordField">
         <VBox.margin>
            <Insets right="400.0" />
         </VBox.margin></PasswordField>

        <Label text="Conferma Nuova Password:">
            <padding>
                <Insets top="5.0" />
            </padding></Label>
        <PasswordField fx:id="confirmPasswordField">
         <VBox.margin>
            <Insets right="400.0" />
         </VBox.margin></PasswordField>
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</VBox>
